# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /proto                                  Application.proto
POST    /update                                 Application.process

# Rules
POST    /rules                                  Rules.update

GET     /auth                                   RequiresLogin.auth
GET     /login                                  RequiresLogin.login
GET     /logout                                 RequiresLogin.logout
GET     /offline                                RequiresLogin.offline

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
