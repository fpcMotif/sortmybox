# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
POST    /update                                 Application.process

# Rules
POST    /rules                                  Rules.update

# Background tasks
# TODO(syyang): secure /tasks and /cron path
GET     /tasks/{<.*>rest}                       TaskManager.process
POST    /tasks/{<.*>rest}                       TaskManager.process

GET     /cron/{<.*>rest}                        CronManager.process
POST    /cron/{<.*>rest}                        CronManager.process

# Authorization
GET     /auth                                   RequiresLogin.auth
GET     /login                                  RequiresLogin.login
GET     /logout                                 RequiresLogin.logout
GET     /offline                                RequiresLogin.offline

# Redirect for favicon.ico
GET     /favicon.ico                            staticFile:public/img/favicon.ico

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
